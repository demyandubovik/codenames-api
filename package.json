{
  "name": "codenames-api",
  "version": "1.0.0",
  "main": "src/index.ts",
  "repository": "git@github.com:insider9/codenames-api.git",
  "author": "Demyan Dubovik <demyandubovik@gmail.com>",
  "license": "MIT",
  "scripts": {
    "dev": "nodemon --exec \"yarn type-check && yarn start\"",
    "type-check": "tsc",
    "start": "babel-node src --extensions \".ts,.tsx\"",
    "build": "./node_modules/.bin/babel src --out-dir build --extensions \".ts,.tsx\""
  },
  "dependencies": {
    "@babel/polyfill": "^7.8.7",
    "@types/koa": "^2.11.3",
    "koa": "^2.11.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.9.0",
    "@babel/node": "^7.8.7",
    "@babel/preset-env": "^7.9.5",
    "@babel/preset-typescript": "^7.9.0",
    "ts-node": "^8.8.2",
    "typescript": "^3.8.3",
    "nodemon": "^2.0.3"
  },
  "nodemonConfig": {
    "watch": ["src"],
    "ext": ".ts,.tsx",
    "ignore": [
      "node_modules/*",
      "build/*"
    ]
  }
}
