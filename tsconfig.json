{
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "es6",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noEmit": true,
    "rootDir": "src",
    "sourceMap": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "exclude": [
    "node_modules"
  ]
}